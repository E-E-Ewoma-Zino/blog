<frameset>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		.card {

			background-color: #fff;
			border: none;
		}

		.btn-comment {
			border-radius: 25px;
			border-top-left-radius: 0;
			border-bottom-left-radius: 0;
		}

		.form-color {

			background-color: #fafafa;

		}

		.form-control {
			height: 48px;
			border-radius: 25px 0 0 25px;
		}

		.form-group {
			width: 100%;
			display: flex;
			align-items: stretch;
		}

		.form-control:focus {
			color: #495057;
			background-color: #fff;
			border-color: #000;
			outline: 0;
			box-shadow: none;
			text-indent: 10px;
		}

		.c-badge {
			background-color: #000;
			color: white;
			height: 20px;
			font-size: 11px;
			width: 92px;
			border-radius: 5px;
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 2px;
		}

		.comment-text {
			font-size: 13px;
		}

		.wish {

			color: #000;
		}


		.user-feed {

			font-size: 14px;
			margin-top: 12px;
		}
	</style>
	<section>
		<div class="container mt-5 mb-5">

			<div class="row height d-flex justify-content-center align-items-center">

				<div class="col-12">

					<div class="card">

						<div class="p-3">

							<h6>Comments</h6>

						</div>

						<form action="/blog/comment?_method=PATCH" method="post">
							<div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
								<img src="https://i.imgur.com/zQZSWrt.jpg" width="50" class="rounded-circle mr-2">
								<div class="form-group">
									<input type="text" name="comment" class="form-control"
										placeholder="Enter your comment...">
									<input type="text" hidden name="user" value="Stan" class="form-control">
									<input type="text" hidden name="blogId" value="<%= blog._id %>"
										class="form-control">
									<button type="submit" class="btn btn-comment btn-dark btn-small">submit</button>
								</div>
							</div>

						</form>

						<div class="mt-2">
							<% blog.comments.forEach(c=> { %>
								<div class="d-flex flex-row p-3">
									<img src="https://i.imgur.com/zQZSWrt.jpg" width="40" height="40"
										class="rounded-circle mr-3">

									<div class="w-100">
										<div class="d-flex justify-content-between align-items-center">
											<div class="d-flex flex-row align-items-center">
												<span class="mr-2">
													<%= c.user %>
												</span>
												<!-- <small class="c-badge">Top Comment</small> -->
											</div>
											<small>
												<script>
													document.write(moment("<%= new Date(c.createdAt) %>").startOf('day').fromNow())
												</script>
											</small>
										</div>

										<p class="text-justify comment-text mb-0">
											<%= c.comment %>
										</p>

										<div class="d-flex flex-row user-feed">

											<!-- <span class="wish"><i class="fa fa-heartbeat mr-2"></i>24</span> -->
											<!-- <span class="ml-3"><i class="fa fa-comments-o mr-2"></i>Reply</span> -->
										</div>

									</div>


								</div>
								<% }); %>
						</div>

					</div>

				</div>
			</div>

		</div>
	</section>
</frameset>