
	<style>
		.card {

			background-color: #fff;
			border: none;
		}

		.btn-comment {
			border-radius: 25px;
			border-top-left-radius: 0;
			border-bottom-left-radius: 0;
		}

		.form-group {
			width: 100%;
			display: flex;
			align-items: stretch;
		}

		.form-color {

			background-color: #fafafa;

		}

		.form-control {
			height: 48px;
			border-radius: 25px 0 0 25px;
		}

		.form-group {
			width: 100%;
			display: flex;
			align-items: stretch;
		}

		.form-control {
			display: block;
			width: 100%;
			min-height: calc(1.5em + .75rem + 2px);
			padding: .375rem .75rem;
			font-size: 1rem;
			font-weight: 400;
			line-height: 1.5;
			color: #495057;
			background-color: #fff;
			background-clip: padding-box;
			border: 1px solid #ced4da;
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			border-radius: .25rem;
			transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
		}

		.form-control:focus {
			color: #495057;
			background-color: #fff;
			border-color: #000;
			outline: 0;
			box-shadow: none;
			text-indent: 10px;
		}

		.c-badge {
			background-color: #000;
			color: white;
			height: 20px;
			font-size: 11px;
			width: 92px;
			border-radius: 5px;
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 2px;
		}

		.comment-text {
			font-size: 13px;
		}

		.wish {

			color: #000;
		}


		.user-feed {

			font-size: 14px;
			margin-top: 12px;
		}

		[type=button]:not(:disabled),
		[type=reset]:not(:disabled),
		[type=submit]:not(:disabled),
		button:not(:disabled) {
			cursor: pointer;
		}

		.btn-dark {
			color: #fff;
			background-color: #343a40;
			border-color: #343a40;
		}

		.btn {
			display: inline-block;
			font-weight: 400;
			line-height: 1.5;
			color: #212529;
			text-align: center;
			text-decoration: none;
			vertical-align: middle;
			cursor: pointer;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
			background-color: transparent;
			border: 1px solid transparent;
			padding: .375rem .75rem;
			font-size: 1rem;
			border-radius: .25rem;
			transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
		}
	</style>
	<section>
		<div class="container mt-5 mb-5">

			<div class="row height d-flex justify-content-center align-items-center">

				<div class="col-12">

					<div class="card">

						<div class="p-3">

							<h6>Comments</h6>

						</div>

						<form action="?_method=PATCH" method="post">
							<div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
								<% if(user){ %>
									<span src="https://i.imgur.com/zQZSWrt.jpg" width="40" height="40"
										class="circle-profile rounded-circle mr-3">
										<%= user.substring(0, 1) %>
									</span>
									<% }else{ %>
										<img src="/client/images/user.png" width="50" class="rounded-circle mr-2">
										<% } %>
											<div class="form-group">
												<input type="text" name="comment" class="form-control"
													placeholder="Enter your comment...">
												<input type="text" hidden name="blogId" value="<%= blog._id %>"
													class="form-control">
												<button type="submit"
													class="btn btn-comment btn-dark btn-small">submit</button>
											</div>
							</div>

						</form>

						<div class="mt-2">
							<% blog.comments.forEach(c=> { %>
								<% if (c.isVerified) { %>
									<div class="d-flex flex-row p-3">
										<span src="https://i.imgur.com/zQZSWrt.jpg" width="40" height="40"
											class="circle-profile rounded-circle mr-3">
											<%= c.user.username.substring(0, 1) %>
										</span>
										<div class="w-100">
											<div class="d-flex justify-content-between align-items-center">
												<div class="d-flex flex-row align-items-center">
													<span class="mr-2">
														<%= c.user?.username %>
													</span>
													<!-- <small class="c-badge">Top Comment</small> -->
												</div>
												<small data-date="<%= new Date(c.createdAt) %>">
												</small>
											</div>

											<p class="text-justify comment-text mb-0">
												<%= c.comment %>
											</p>

											<div class="d-flex flex-row user-feed">

												<!-- <span class="wish"><i class="fa fa-heartbeat mr-2"></i>24</span> -->
												<!-- <span class="ml-3"><i class="fa fa-comments-o mr-2"></i>Reply</span> -->
											</div>

										</div>


									</div>
									<% } %>
										<% }); %>
						</div>

					</div>

				</div>
			</div>

		</div>
	</section>
	<script>
		const dateT = document.querySelectorAll("[data-date]");
		dateT.forEach(dT => {
			dT.innerHTML = moment(dT.dataset.date).startOf('seconds').fromNow();
		});
	</script>
