<!-- partial:partials/_head -->
<%- include("partials/_head") %>
	<!-- moment script -->
	<script src="/client/js/moment.js"></script>
	<!-- partial -->
	<div class="container-scroller">
		<!-- partial:partials/_navbar -->
		<%- include("partials/_navbar") %>
			<!-- partial -->
			<div class="container-fluid page-body-wrapper">
				<!-- partial:partials/_sidebar -->
				<%- include("partials/_sidebar") %>
					<!-- partial -->
					<div class="main-panel">
						<div class="content-wrapper">
							<div class="row">
								<div class="col-md-12 grid-margin">
									<div class="d-flex justify-content-between align-items-center">
										<div>
											<h4 class="font-weight-bold mb-0">All Users</h4>
										</div>
										<div>
											<!-- <button type="button" class="btn btn-primary btn-icon-text btn-rounded">
												<i class="ti-clipboard btn-icon-prepend"></i>Report
											</button> -->
										</div>
									</div>
								</div>
							</div>
							<!-- main -->
							<div class="row">
								<div class="col-lg-12 grid-margin stretch-card">
									<div class="card">
										<div class="card-body">
											<h4 class="card-title">Comments</h4>
											<p class="card-description">
												Approve comments here
											</p>
											<div class="table-responsive">
												<table class="table">
													<thead>
														<tr>
															<th>
																User
															</th>
															<th>
																Username
															</th>
															<th>
																Email
															</th>
															<th>
																Action
															</th>
														</tr>
													</thead>
													<tbody>
														<% allUsers.forEach(user=> { %>
															<tr>
																<td class="py-1">
																	<span
																		style="text-transform: capitalize;font-weight: bold;font-size: larger;border: 1px solid #787878;padding: .5rem;border-radius: 50%;">
																		<%= user?.username.substring(0, 1) %>
																	</span>
																</td>
																<td>
																	<% if(user.authLevel> 0) { %>
																		<i class="ti-medall menu-icon text-warning"></i>
																		<% } %>
																		<%= user?.username %>
																</td>
																<td>
																	<%= user?.email %>
																</td>
																<td>
																	<button title="Send Mail"
																		data-mail="<%= user.email %>" type="button"
																		class="btn btn-primary btn-rounded btn-icon">
																		<i class="ti-pencil-alt"></i>
																	</button>
																	<!-- <button title="Approve" data-verify="<%# index %>"
																		data-verify-path="/admin/blog/edit/<%# blog.slug %>/comment?id=<%# blog._id %>"
																		type="button"
																		class="btn btn-primary btn-rounded btn-icon">
																		<i class="ti-check"></i>
																	</button>-->
																	<button title="Delete" data-title="Delete Comment"
																		data-delete-path="/admin/users/remove"
																		data-delete="<%= user._id %>" type="button"
																		class="btn btn-danger btn-rounded btn-icon">
																		<i class="ti-trash"></i>
																	</button>
																</td>
															</tr>
															<% }); %>
													</tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- content-wrapper ends -->
						<!-- partial:partials/_footer -->
						<%- include("partials/_footer") %>
							<!-- partial -->
					</div>
					<!-- main-panel ends -->
			</div>
			<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->

	<!-- partial:partials/_scripts -->
	<%- include("partials/_scripts") %>
		<!-- partial -->
		</body>

		</html>