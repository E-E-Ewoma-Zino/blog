<!-- partial:partials/_head -->
<%- include("partials/_head") %>
	<!-- partial -->
	<div class="container-scroller">
		<!-- partial:partials/_navbar -->
		<%- include("partials/_navbar") %>
			<!-- partial -->
			<div class="container-fluid page-body-wrapper">
				<!-- partial:partials/_sidebar -->
				<%- include("partials/_sidebar") %>
					<!-- partial -->
					<div class="main-panel">
						<div class="content-wrapper">
							<div class="row">
								<div class="col-md-12 grid-margin">
									<div class="d-flex justify-content-between align-items-center">
										<div>
											<h4 class="font-weight-bold mb-0">Create Blog</h4>
										</div>
										<div>
											<button type="button" class="btn btn-primary btn-icon-text btn-rounded" onclick="history.back()">
												<i class="ti-arrow-left btn-icon-prepend"></i>Back
											</button>
										</div>
									</div>
								</div>
							</div>

							<!-- form -->
							<div class="row">
								<div class="col-12 grid-margin stretch-card">
									<div class="card">
										<div class="card-body">
											<h4 class="card-title">New Blog</h4>
											<p class="card-description">
												Use the form below to create a new blog
											</p>
											<form class="forms-sample" action="/blog/" method="post"
												enctype="multipart/form-data">
												<div class="form-group">
													<label for="title">Title</label>
													<input type="text" class="form-control" id="title" name="title"
														placeholder="The fall of Bitcoin" required>
												</div>
												<div class="form-group">
													<label for="subTitle">Sub Title</label>
													<input type="text" class="form-control" id="subTitle" name="subTitle"
														placeholder="Can Bitcoin rise back up" required>
												</div>
												<div class="form-group">
													<label for="author">Author</label>
													<input type="text" class="form-control" id="author" name="author"
														placeholder="Ewoma Zino" required>
												</div>
												<div class="form-group">
													<label for="description">Description</label>
													<input type="text" class="form-control" id="description"
														name="description" placeholder="This is a detailed description on how Bitcoin went down the chart and how it will rise again" required>
												</div>
												<div class="form-group">
													<label for="keywords">Keywords</label>
													<input type="text" class="form-control" id="keywords"
														name="keywords" placeholder="bitcoin, financial issues with bitcoin, bitcoin drop, crypto currency" required>
												</div>
												<div class="form-group">
													<label>Image upload</label>
													<input type="file" name="image" accept="image/*"
														class="file-upload-default" required>
													<div class="input-group col-xs-12">
														<input type="text" class="form-control file-upload-info"
															placeholder="Upload Image" required>
														<span class="input-group-append">
															<button class="file-upload-browse btn btn-primary"
																type="button">Upload</button>
														</span>
													</div>
												</div>
												<div class="form-group">
													<label for="markdown">Content</label>
													<textarea rows="4" class="form-control" id="markdown"
														name="markdown" placeholder="Content"
														style="resize: auto" required></textarea>
												</div>
												<button type="submit" class="btn btn-primary mr-2">Submit</button>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- content-wrapper ends -->
						<!-- partial:partials/_footer -->
						<%- include("utils/messageBird") %>
							<!-- partial -->
						<!-- partial:partials/_footer -->
						<%- include("partials/_footer") %>
							<!-- partial -->
					</div>
					<!-- main-panel ends -->
			</div>
			<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->

	<!-- partial:partials/_scripts -->
	<%- include("partials/_scripts") %>
		<!-- partial -->
		</body>

		</html>